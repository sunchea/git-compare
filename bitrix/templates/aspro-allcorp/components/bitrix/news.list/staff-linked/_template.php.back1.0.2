			<?if($arParams["VIEW_TYPE"] == "table"):?>
				<script>
				var templateName = '<?=$templateName?>';
				$(document).ready(function(){
					setTimeout(function(){
						$(".table." + templateName + " .row .item:visible .image").sliceHeight({slice: <?=$arParams["COUNT_IN_LINE"]?>});
						$(".table." + templateName + " .row .item:visible .text").sliceHeight({slice: <?=$arParams["COUNT_IN_LINE"]?>});
					}, 500);
				})
				</script>
			<?endif;?>
		</div>
	<?endif;?>
	
